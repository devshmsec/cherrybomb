{
	"compilerOptions": {
        "jsx": "react",
	  	"module": "esnext",
	  	"target": "es5",
	  	"lib": ["es2020", "dom"],
	  	"moduleResolution": "node",
	  	"forceConsistentCasingInFileNames": true,
	  	"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"experimentalDecorators": true,
	  	"checkJs": true,
	  	"removeComments": true,
	  	"sourceMap": true,
		"paths": {
			"@src/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@redux/*": ["src/redux/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["assets/*"]
		},
	},
	"exclude": ["node_modules", "**/*.(test|stories).jsx?"]
}
